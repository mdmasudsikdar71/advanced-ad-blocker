{
  "manifest_version": 3,
  "name": "Advanced Ad Blocker",
  "version": "1.0",
  "description": "Blocks video and banner ads. Includes a toggle UI.",
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": "/icon.png"
  },
  "background": {
    "service_worker": "background.ts"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content/youtube-enhancer.ts"],
      "run_at": "document_idle"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content/global-cleaner.ts"],
      "run_at": "document_idle"
    }
  ]
}
